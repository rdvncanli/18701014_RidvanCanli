@model IEnumerable<Mekan> 
@{
    ViewData["Title"] = "Home Page";
}
<style>
    .card-title {
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    }
</style>
<div class="row  d-flex justify-content-between ">
      @foreach (var item in Model)
      {
      <div class="card border border-danger" style="width: 18rem; margin-bottom:30px;">
          <img class="card-img-top  border border-danger rounded" src="~/img/mekan/@item.hastalikResmi" alt="Card image cap" width="500" height="275">
          <div class="card-body">
              <h4  class="card-text " ><a href="/@item.user/mekan/@item.mekanId">@item.hastalikAdi</a></h4>
              <h5><span class="badge badge-dark" style="color:white">@item.CatName</span></h5>
              <a href="/@item.user/mekan/@item.mekanId" class="btn btn-danger">Hastalık Detaylarını Gör</a>
          </div>
      </div>
      }
</div>